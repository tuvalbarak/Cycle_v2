    <declare-styleable name="MTPrimaryButton">
        <attr name="MTtitle" format="string" />
        <attr name="MTbackgroundSelector" />
        <attr name="MTtextColorSelector" format="color" />
        <attr name="MTstrokeBackground" format="reference" />

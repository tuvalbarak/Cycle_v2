<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/common_screen_padding">

    <TextView
        android:id="@+id/myVehiclesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/CycleTitleStyle"
        android:text="My Vehicles"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myVehiclesRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/myVehiclesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/common_extra_large_margin"
        tools:listitem="@layout/item_my_vehicles"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/myVehiclesFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/baseline_add_24"
        app:tint="@color/white"
        android:backgroundTint="@color/primary_blue"
        style="@style/Widget.MaterialComponents.FloatingActionButton" />

    <com.tdp.cycle.common.customviews.CustomEmptyState
        android:id="@+id/myVehiclesEmptyState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:FirstButtonTextCustom="Add a vehicle"
        app:FirstButtonState="true"
        app:SecondButtonState="false"
        app:TitleCustom="It seems that you don't have any vehicles yet"
        app:TextCustom="You can choose one of our options..."
        app:BackgroundCustom="@drawable/empty_state_ny_vehicles"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
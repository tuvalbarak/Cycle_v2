<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/common_screen_padding">

    <TextView
        android:id="@+id/chatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/CycleTitleStyle"
        android:text="Chat"/>

    <com.tdp.cycle.common.customviews.CustomEmptyState
        android:id="@+id/chatEmptyState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:FirstButtonState="false"
        app:SecondButtonState="false"
        app:TitleCustom="It seems that you don't have any active chats yet"
        app:TextCustom="You can chat charging stations' owners"
        app:BackgroundCustom="@drawable/empty_state_chat"
        android:visibility="gone" />

        <LinearLayout
            android:id="@+id/activityChatHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/decorative_color"
                android:elevation="4dp"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <FrameLayout
                    android:id="@+id/chatActHeaderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/chatActExpertImg"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/ic_place_holder_oval" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/chatActExpertName"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blackTextColor"
                                tools:text="Dan Cohen" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/chatActTitleSpace"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/chatActRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none" />

                    </LinearLayout>

                </FrameLayout>

                <com.tdp.cycle.common.customviews.CustomInputView
                    android:id="@+id/chatActMsgInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="81dp" />

            </LinearLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
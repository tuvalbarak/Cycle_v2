<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/emptyStateIllustration"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/emptyStateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/blackTextColor"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emptyStateDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:lines="3"
        android:textColor="@color/light_grey"
        android:textSize="13sp"
        android:textStyle="bold" />

    <com.tdp.cycle.common.customviews.MTPrimaryButton
        android:id="@+id/emptyStateFirstButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        app:MTstrokeBackground="@drawable/rect_primary_blue_background"
        app:MTstrokeTextColor="@color/white"
        app:MTtextSize="16"
        app:MTtitle="נסה שנית" />

    <com.tdp.cycle.common.customviews.MTPrimaryButton
        android:id="@+id/emptyStateSecondButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="20dp"
        app:MTstrokeBackground="@drawable/rect_white_blue_stroke"
        app:MTstrokeTextColor="@color/primary_blue"
        app:MTtextSize="13"
        app:MTtitle="ביצוע הזמנה חדשה" />

</LinearLayout>
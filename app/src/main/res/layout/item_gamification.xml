<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/common_extra_small_margin"
    android:layout_marginTop="@dimen/common_medium_margin"
    android:elevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_small_padding">

        <TextView
            android:id="@+id/gamificationAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="1000"
            style="@style/CycleRegularTextStyle" />

        <TextView
            android:id="@+id/gamificationDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gamificationAmount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/common_small_margin"
            tools:text="Rated a station"
            style="@style/CycleRegularTextStyle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>